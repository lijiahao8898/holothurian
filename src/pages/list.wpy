<template>
    <view>
        <scroll-view scroll-y bindscrolltoupper="upper" id="scrollView">
            <goods :goodsList.sync="goodsList"></goods>
        </scroll-view>
        <view wx:if="{{isListEnd}}">
            <view class="footer">已经到最底部啦~</view>
        </view>
    </view>
</template>

<script>
    import wepy from 'wepy';
    import goods from '../components/goods';
    import API from '@/utils/http/api';

    const api = new API();

    export default class list extends wepy.page {
        config = {
            navigationBarTitleText: '商品列表',
        };
        data = {
            height: '500px',
            goodsList: [],
            pager: {
                pageNum: 1,
                pageSize: 20
            },
            isListEnd: false
        };
        components = {
            goods
        };

        onShow () {
            this.getGoodsList();
        }

        async getGoodsList () {
            wepy.showLoading({
                title: '拼命加载中...',
            });
            const data = await api.getGoodsList({
                ...this.pager
            });
            if(data.code === 200) {
                const rows = data.data.rows;
                this.isListEnd = rows.length <= 0;
                console.log(this.isListEnd);
                if(this.goodsList.length <= 0) {
                    this.goodsList = [...rows];
                } else {
                    rows.forEach(item => {
                        this.goodsList.push(item);
                    });
                }
                this.$apply();
            }
            wepy.hideLoading();
        }

        async onPullDownRefresh () {
            await this.getGoodsList();
            wepy.stopPullDownRefresh()
        }

        onReachBottom () {
            const pager = {...this.pager};
            pager.pageNum += 1;
            this.pager = {...pager};
            this.getGoodsList();
        }

        methods = {
            upper (e) {
                console.log(e);
            }
        };
    }
</script>

